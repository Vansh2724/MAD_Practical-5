<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="20dp"
          android:layout_marginTop="20dp"
          >
          <TextView
              android:id="@+id/txt_url"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="Web Url:"
              android:textSize="18sp"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBaseline_toBaselineOf="@+id/edit_web_url"
              />

            <EditText
                android:id="@+id/edit_web_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"
                android:textSize="16sp"
                android:inputType="textWebEditText"
                android:text="https://www.youtube.com/"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_url"
                app:layout_constraintEnd_toStartOf="@+id/btn_browse"
                />
                <Button
                    android:id="@+id/btn_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/edit_web_url"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

          <TextView
              android:id="@+id/txt_phoneno"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Phone No:"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_marginTop="40dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/txt_url"
              />

          <EditText
              android:id="@+id/edit_phone"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:ems="0"
              android:textSize="16sp"
              android:inputType="phone"
              android:text="8401138433"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@id/txt_phoneno"
              app:layout_constraintEnd_toStartOf="@+id/btn_call"
              app:layout_constraintBaseline_toBaselineOf="@id/txt_phoneno"
              />
          <Button
              android:id="@+id/btn_call"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Call"
              app:layout_constraintEnd_toEndOf="@id/btn_browse"
              app:layout_constraintStart_toEndOf="@id/edit_phone"
              app:layout_constraintBaseline_toBaselineOf="@id/edit_phone"
              />

          <TextView
              android:id="@+id/txt_calllog"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Call Log:"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_marginTop="40dp"
              app:layout_constraintTop_toBottomOf="@id/txt_phoneno"
              />
          <Button
              android:id="@+id/btn_calllog"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Calllog"
              app:layout_constraintEnd_toEndOf="@id/btn_call"
              app:layout_constraintStart_toEndOf="@id/edit_phone"
              app:layout_constraintBaseline_toBaselineOf="@id/txt_calllog"
              />

          <TextView
              android:id="@+id/txt_gallary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Gallary:"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_marginTop="40dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/txt_calllog"
              />
          <Button
              android:id="@+id/btn_gallary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Gallary"
              app:layout_constraintEnd_toEndOf="@id/btn_calllog"
              app:layout_constraintBaseline_toBaselineOf="@id/txt_gallary"
              />
          <TextView
              android:id="@+id/txt_camera"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Camera:"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_marginTop="40dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/txt_gallary"
              />
          <Button
              android:id="@+id/btn_camera"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Camera"
              app:layout_constraintEnd_toEndOf="@id/btn_gallary"
              app:layout_constraintBaseline_toBaselineOf="@id/txt_camera"
              />
          <TextView
              android:id="@+id/txt_alarm"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Alarm:"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_marginTop="40dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/txt_camera"
              />
          <Button
              android:id="@+id/btn_alarm"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Alarm"
              app:layout_constraintEnd_toEndOf="@id/btn_camera"
              app:layout_constraintBaseline_toBaselineOf="@id/txt_alarm"
              />
      </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
